{
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Read(**/*.ts)",
      "Read(**/*.tsx)",
      "Read(**/*.vue)",
      "Read(**/*.json)",
      "Read(package.json)",
      "Read(tsconfig.json)",
      "Read(vite.config.ts)",
      "Read(nest-cli.json)",
      "Read(.env.example)",
      "Read(README.md)",
      "Read(constitution.md)",
      "Read(CLAUDE.md)",
      "Read(specs/**)",
      "Read(notes/**)",
      "Grep",
      "Glob",
      "LS",
      "Bash(node:version)",
      "Bash(npm:list:*)",
      "Bash(npm:version)",
      "Bash(npm:test:*)",
      "Bash(npm:run:lint)",
      "Bash(npm:run:format)",
      "Bash(npm:run:type-check)",
      "Bash(npm:run:test:e2e)",
      "Bash(npm:run:test:cov)",
      "Bash(nest:*)",
      "Bash(vite:*)",
      "Bash(prettier:*)",
      "Bash(eslint:*)",
      "Bash(prettier:check:*)"
    ],
    "ask": [
      "Write",
      "Edit",
      "MultiEdit",
      "Bash(npm:install)",
      "Bash(npm:add:*)",
      "Bash(git:add:*)",
      "Bash(git:commit:*)",
      "Bash(npm:run:build)",
      "Bash(npm:run:dev)"
    ],
    "deny": [
      "Read(.env)",
      "Read(*.pem)",
      "Read(*.key)",
      "Read(**/.env)",
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(git:push:*)",
      "Bash(npm:publish)",
      "WebFetch"
    ]
  }
}
